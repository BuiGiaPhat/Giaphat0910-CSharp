@model QLKS.Models.TBLPHIEUDATPHONG

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header id="gtco-header" class="gtco-cover gtco-cover-md g-header" role="banner" style="background-image: url(/Content/Home/images/img_bg_1.jpg)" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
</header>
<div class="container">
    <br /><br /><br /><br />

    <h3>Bạn muốn hủy phiếu đã đặt !</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Tên khách hàng")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TBLKHACHHANG.HO_TEN)
            </dd>


            <dt>
                @Html.DisplayName("Ngày đặt")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NGAY_DAT)
            </dd>


            <dt>
                @Html.DisplayName("Ngày vào")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NGAY_VAO)
            </dd>

            <dt>
                @Html.DisplayName("Ngày ra")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NGAY_RA)
            </dd>


            <dt>
                @Html.DisplayName("Số phòng")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TBLPHONG.SO_PHONG)
            </dd>

            <dt>
                @Html.DisplayName("Tình trạng")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TBLTINHTRANGPHIEUDATPHONG.TINH_TRANG)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Hủy phiếu" class="btn btn-default" />
            </div>
        }
    </div>
    <br/>
    </div>
